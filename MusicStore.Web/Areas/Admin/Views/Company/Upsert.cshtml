@model MusicStore.Models.DbModels.Company 
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Company";
}

<form method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (Model.Id != 0)
    {
        title = "Edit Company";
    }

    <div class="col-md-12 border-bottom">
        <h2 class="text-dark">@title</h2>
    </div>
    <div class="col-md-8 pt-4">
        <div class="col-md-4">
            <label asp-for="Name"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8 pt-4">
        <div class="col-md-4">
            <label asp-for="StreetAddress"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="StreetAddress" class="form-control" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8 pt-4">
        <div class="col-md-4">
            <label asp-for="City"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8 pt-4">
        <div class="col-md-4">
            <label asp-for="State"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8 pt-4">
        <div class="col-md-4">
            <label asp-for="PhoneNumber"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-8 pt-4">
        <div class="col-md-4">
            <label asp-for="IsAuthorizedCompany"></label>
        </div>
        <div class="col-md-8">
           <input type="checkbox" asp-for="IsAuthorizedCompany" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8">
            @if (Model.Id != 0)
            {
                @await Component.InvokeAsync("EditAndBackToListButton", new { id = Model.Id })
            }
            else
            {
                @await Component.InvokeAsync("CreateAndBackToListButton")
            }
        </div>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}