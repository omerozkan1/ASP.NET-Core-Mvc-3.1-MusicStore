@model MusicStore.Models.DbModels.Category 
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Category";
}

<div class="row">
    <div class="col-md-6">

        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.Id != 0)
            {
                title = "Edit Category";
            }

            <div class="col-md-12 border-bottom">
                <h2 class="text-dark">@title</h2>
            </div>

            <div class="form-group">
                <label asp-for="CategoryName"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>


            @if (Model.Id != 0)
            {
                @await Component.InvokeAsync("EditAndBackToListButton", new { id = Model.Id })
            }
            else
            {
                @await Component.InvokeAsync("CreateAndBackToListButton")
            }


        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}